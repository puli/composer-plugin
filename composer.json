{
    "name": "puli/composer-plugin",
    "type": "composer-plugin",
    "description": "Integrates Composer into the Puli package manager.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "composer-plugin-api": "^1.0",
        "symfony/process": "^2.3",
        "puli/repository": "^1.0@dev",
        "puli/discovery": "^1.0@dev",
        "puli/url-generator": "^1.0@dev",
        "webmozart/key-value-store": "@dev",
        "webmozart/path-util": "^2.0",
        "webmozart/assert": "^1.0"
    },
    "require-dev": {
        "composer/composer": "^1.0@dev",
        "symfony/filesystem": "^2.3",
        "phpunit/phpunit": "^4.6"
    },
    "autoload": {
        "psr-4": {
            "Puli\\ComposerPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\ComposerPlugin\\Tests\\": "tests/",
            "Puli\\Repository\\Tests\\": "vendor/puli/repository/tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "class": "Puli\\ComposerPlugin\\PuliPlugin"
    },
    "support": {
        "issues": "https://github.com/puli/issues/issues"
    }
}
